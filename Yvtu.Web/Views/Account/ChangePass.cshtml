@model Yvtu.Web.Dto.ChangePassDto

@{
    ViewData["Title"] = "تغيير كلمة المرور";
}

<div class="row bg-white">
    <div class="col-12 shadow-sm LoginBox py-1" style="background-color:#EDF0F2;">
        <div class="mb-2 text-center pb-1" style="background-color:rebeccapurple;border-radius:8px;color:white;">
            <p style="font-family: 'ArefRuqaa-Bold';font-size:28px;">تغيير كلمة المرور</p>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-3"></div>
    <div class="col-md-6 shadow-sm LoginBox">
        <form method="post">
            @if (Model != null && !string.IsNullOrEmpty(Model.Error))
            {
                <div class="form-group">
                    <label asp-for="Error" class="alert alert-danger" style="font-size:12px;">@Model.Error</label>
                </div>
            }

            <div class="form-group col-12">
                <label asp-for="OldPass" class="FormLabel">كلمة المرور القديمة :</label>
                <input asp-for="OldPass" class="form-control text-center RequiredInput" />
                <span asp-validation-for="OldPass" class="text-danger"></span>
            </div>

            <div class="form-group col-12">
                <label asp-for="NewPass" class="FormLabel">كلمة المرور الجديدة :</label>
                <input asp-for="NewPass" class="form-control text-center RequiredInput" />
                <span asp-validation-for="NewPass" class="text-danger"></span>
            </div>
            <div class="form-group col-12">
                <label asp-for="ConfirmNewPass" class="FormLabel">تاكيد كلمة المرور الجديدة :</label>
                <input asp-for="ConfirmNewPass" class="form-control text-center RequiredInput" />
                <span asp-validation-for="ConfirmNewPass" class="text-danger"></span>
            </div>
            <p class="text-muted" style="font-size:11px;">كلمة المرور يجب ان تتكون من ارقام فقط و بطول 4 الى 6</p>
            <button type="submit" class="btn btn-outline-success"
                    style="width:100%;border-radius:10px;">
                <i class="fa fa-save"></i>&nbsp;&nbsp;  حفظ
            </button>
        </form>
    </div>
    <div class="col-3"></div>
</div>