@model Yvtu.Web.Dto.CreateMoneyTransferDto

@{
    ViewData["Title"] = "Create Money Transfer";
}



<div class="row">
    <div class="col-md-12 shadow-lg LoginBox">
        <div class="mb-2 text-center pb-1" style="background-color:rebeccapurple;border-radius:8px;color:white;">
            <div class="d-inline-flex">
                <p style="font-family: 'ArefRuqaa-Bold';font-size:28px;">نقل (تعزيز) رصيد</p>
            </div>
        </div>

        <form method="post">
            <div id="lblError" asp-for="Error" class="alert alert-danger" style="font-size:12px;display:none;"></div>
            @if (Model != null && !string.IsNullOrEmpty(Model.Error))
            {
                <div class="form-group">
                    <label asp-for="Error" class="alert alert-danger" style="font-size:12px;">@Model.Error</label>
                </div>
            }
            <div class="form-row">
                <div class="form-group col-4 row">
                    <label asp-for="PartnerId" class="FormLabel">رقم الجهة :</label>
                    <div class="col-8">
                        <input id="txtPartnerId" asp-for="PartnerId" class="form-control RequiredInput text-center" style="font-size:20px;font-weight:bold;" />
                        <span asp-validation-for="PartnerId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group col-8 row">
                    <label id="lblPartnerName" style="font-size:22px;font-weight:bold;color:darkslateblue;" />
                </div>
            </div>
            <div class="form-row justify-content-between">
                <div class="form-group col-2">
                    <div style="display:block;text-align:center;">
                        <label asp-for="PartnerRoleName" class="FormLabel">النوع</label>
                    </div>
                    <div style="display:block;text-align:center;">
                        <label id="lblPartnerRoleName" asp-for="PartnerRoleName" style="font-size:22px;font-weight:bold;color:darkslateblue;" />
                    </div>
                </div>
                <div class="form-group col-2">
                    <div style="display:block;text-align:center;">
                        <label asp-for="PartnerBalance" class="FormLabel">الرصيد</label>
                    </div>
                    <div style="display:block;text-align:center;">
                        <label id="lblPartnerBalance" asp-for="PartnerBalance" style="font-size:22px;font-weight:bold;color:darkslateblue;" />
                    </div>
                </div>

                <div class="form-group col-2">
                    <div style="display:block;text-align:center;">
                        <label asp-for="FixedFactor" class="FormLabel">نسبة ثابتة</label>
                    </div>
                    <div style="display:block;text-align:center;">
                        <span id="lblFixedFactor" asp-for="FixedFactor" style="font-size:22px;font-weight:bold;color:darkslateblue;" />
                    </div>
                </div>

                <div class="form-group col-2">
                    <div style="display:block;text-align:center;">
                        <label asp-for="TaxPercent" class="FormLabel">الضريبة%</label>
                    </div>
                    <div style="display:block;text-align:center;">
                        <span id="lblTaxPercent" asp-for="TaxPercent" style="font-size:22px;font-weight:bold;color:darkslateblue;" />
                    </div>
                </div>

                <div class="form-group col-2">
                    <div style="display:block;text-align:center;">
                        <label asp-for="BonusPercent" class="FormLabel">العمولة%</label>
                    </div>
                    <div style="display:block;text-align:center;">
                        <label id="lblBonusPercent" asp-for="BonusPercent" style="font-size:22px;font-weight:bold;color:darkslateblue;" />
                    </div>
                </div>
                <div class="form-group col-2">
                    <div style="display:block;text-align:center;">
                        <label asp-for="BounsTaxPercent" class="FormLabel">ضريبة المنبع%</label>
                    </div>
                    <div style="display:block;text-align:center;">
                        <label id="lblBounsTaxPercent" asp-for="BounsTaxPercent" style="font-size:22px;font-weight:bold;color:darkslateblue;" />
                    </div>
                </div>
            </div>
            <hr />
            <div class="form-row">
                <div class="form-group col-4 row">
                    <label asp-for="Amount" class="FormLabel">المبلغ :</label>
                    <div class="col-8">
                        <input id="txtAmount" asp-for="Amount" class="form-control RequiredInput text-center" style="font-size:20px;font-weight:bold;" />
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group col-8 row">
                    <label id="lblAmountName" style="font-size:22px;font-weight:bold;color:darkslateblue;" />
                </div>
            </div>

            <div class="form-row justify-content-between" style="color:#584cff">
                <div class="form-group col-2">
                    <div style="display:block;text-align:center;">
                        <label asp-for="TaxAmount" class="FormLabel">الضريبة</label>
                    </div>
                    <div style="display:block;text-align:center;">
                        <label id="lblTaxAmount" asp-for="TaxAmount" style="font-size:22px;font-weight:bold;" />
                    </div>
                </div>
                <div class="form-group col-2">
                    <div style="display:block;text-align:center;">
                        <label asp-for="BounsAmount" class="FormLabel">العمولة</label>
                    </div>
                    <div style="display:block;text-align:center;">
                        <label id="lblBounsAmount" asp-for="BounsAmount" style="font-size:22px;font-weight:bold;" />
                    </div>
                </div>
                <div class="form-group col-2">
                    <div style="display:block;text-align:center;">
                        <label asp-for="BounsTaxAmount" class="FormLabel">ض.المنبع</label>
                    </div>
                    <div style="display:block;text-align:center;">
                        <span id="lblBounsTaxAmount" asp-for="BounsTaxAmount" style="font-size:22px;font-weight:bold;" />
                    </div>
                </div>
                <div class="form-group col-3">
                    <div style="display:block;text-align:center;">
                        <label asp-for="NetAmount" class="FormLabel">الصافي</label>
                    </div>
                    <div style="display:block;text-align:center;">
                        <label id="lblNetAmount" asp-for="NetAmount" style="font-size:22px;font-weight:bold;" />
                    </div>
                </div>
                <div class="form-group col-3">
                    <div style="display:block;text-align:center;">
                        <label asp-for="ReceivedAmount" class="FormLabel">المستلم</label>
                    </div>
                    <div style="display:block;text-align:center;">
                        <label id="lblReceivedAmount" asp-for="ReceivedAmount" style="font-size:22px;font-weight:bold;" />
                    </div>
                </div>
            </div>
            <hr />

            <div class="form-row">
                <div class="form-group col-4">
                    <label asp-for="RequestNo" class="FormLabel">رقم الطلبية :</label>
                    <input asp-for="RequestNo" class="form-control text-center" />
                </div>
                <div class="form-group col-4">
                    <label asp-for="RequestAmount" class="FormLabel">المبلغ المطلوب :</label>
                    <input id="txtRequestAmount" asp-for="RequestAmount" class="form-control text-center" />
                </div>
                <div class="form-group col-4">
                    <label asp-for="BillNo" class="FormLabel">رقم الفاتورة :</label>
                    <input asp-for="BillNo" class="form-control text-center" />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-3">
                    <label asp-for="PayTypeId" class="FormLabel">طريقة الدفع :</label>
                    <select asp-for="PayTypeId" class="form-control RequiredInput" style="padding:0px;"
                            asp-items="@(new SelectList(Model.PayType,"Id","Name"))">
                    </select>
                    <span asp-validation-for="PayTypeId" class="text-danger"></span>
                </div>
                <div class="form-group col-3">
                    <label asp-for="PayNo" class="FormLabel">رقم السند/الشيك :</label>
                    <input  asp-for="PayNo"  class="form-control text-center" />
                </div>
                <div class="form-group col-3">
                    <label asp-for="PayDate" class="FormLabel">التاريخ :</label>
                    <input asp-for="PayDate" min="2021-01-01" class="form-control text-center" />
                </div>
                <div class="form-group col-3">
                    <label asp-for="PayBank" class="FormLabel">البنك :</label>
                    <input asp-for="PayBank" class="form-control text-center" />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-12">
                    <label asp-for="Note" class="FormLabel">ملاحظة :</label>
                    <input asp-for="Note" class="form-control" />
                </div>
            </div>
            <button type="submit" class="btn btn-outline-success"
                    style="width:100%;border-radius:10px;">
                التالي &nbsp;&nbsp;  <i class="fa fa-chevron-left"></i>
            </button>

        </form>
    </div>
</div>

@section Scripts
{
    <script src="~/js/MoneyTransferScript.js"></script>
    <script src="~/js/Tafqeet.js"></script>
}
