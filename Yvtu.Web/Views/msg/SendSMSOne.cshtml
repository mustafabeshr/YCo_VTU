@model Yvtu.Web.Dto.SMSOneDto


@{
    ViewData["Title"] = "Send SMS";
}




<div class="row">
    <div class="col-md-12 shadow-sm bg-white pb-3">
        <div class="text-center pb-1" style="background-color:rebeccapurple; border-radius:8px;color:white;">
            <p style="font-family:'ArefRuqaa-Bold';font-size:28px;">ارسال رسالة</p>
        </div>
    </div>
</div>
<form method="post">
    @Html.HiddenFor(m => m.Id)
    <div class="row bg-white pb-3" style="margin-top:1px;">
        <div class="container">
            <div class="form-group col-md-12">
                <label asp-for="Receiver" class="FormLabel">الرقم :</label>
                <input asp-for="Receiver" class="form-control">
                <span asp-validation-for="Receiver" class="text-danger"></span>
            </div>
            <div class="form-group  col-md-12">
                <label asp-for="Message" class="FormLabel">الرسالة :</label> <label id="lblMessageCount" class="FormLabel" style="font-size:20px;">0</label>
                <textarea id="txtMessage" asp-for="Message" class="form-control RequiredInput" style="height:200px;color:blue;"></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>

            <div class="form-group col-md-12">
                <label asp-for="Note" class="FormLabel">ملاحظة :</label>
                <input asp-for="Note" class="form-control">
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            <div class="col-md-12">

                <button id="btnSave" type="submit" class="btn btn-success"
                        style="width:100%;border-radius:10px;">
                    <i class="fa fa-save"></i>&nbsp;&nbsp;  حفظ
                </button>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    <script>
      
        $("#txtMessage").keyup(function () {
            $("#lblMessageCount").text($(this).val().length);
            //console.log($("#txtMessage").val().length);
        });

    </script>
}