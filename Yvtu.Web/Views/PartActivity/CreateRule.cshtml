@model Yvtu.Web.Dto.CreatePartnerActivity2Dto

@{
    ViewData["Title"] = "Create Rule";
}



<div class="row">
    <div class="col-md-12 shadow-sm LoginBox">
        <div class="mb-2 text-center pb-1" style="background-color:rebeccapurple;border-radius:8px;color:white;">
            <p style="font-family: 'ArefRuqaa-Bold';font-size:28px;">منح صلاحية جديدة</p>
        </div>

        <form method="post">
            @if (Model != null && !string.IsNullOrEmpty(Model.Error))
            {
                <div class="form-group">
                    <label asp-for="Error" class="alert alert-danger" style="font-size:12px;">@Model.Error</label>
                </div>
            }
            <div class="form-group col-12">
                <label asp-for="ActivityId" class="FormLabel">الاجراء :</label>
                <select asp-for="ActivityId" class="form-control RequiredInput" style="padding:0px;font-size:12px;"
                        asp-items="@(new SelectList(Model.Activities,"Id","Name"))">
                    <option></option>
                </select>
                <span asp-validation-for="ActivityId" class="text-danger"></span>
            </div>
            <div class="form-group col-12">
                <label asp-for="FromRoleId" class="FormLabel">من النوع :</label>
                <select asp-for="FromRoleId" class="form-control RequiredInput" style="padding:0px;font-size:12px;"
                        asp-items="@(new SelectList(Model.FromRoles,"Id","Name"))">
                    <option></option>
                </select>
                <span asp-validation-for="FromRoleId" class="text-danger"></span>
            </div>
            <div class="form-group col-12">
                <label asp-for="MaxQueryDurationId" class="FormLabel">اقصى فترة المسموح الاستعلام خلالها :</label>
                <select id="citySelect" asp-for="MaxQueryDurationId" class="form-control RequiredInput" style="padding:0px;font-size:12px;"
                        asp-items="@(new SelectList(Model.MaxQueryDuration,"Id","Name"))">
                    <option></option>
                </select>
                <span asp-validation-for="MaxQueryDurationId" class="text-danger"></span>
            </div>
            <div class="form-group col-12">
                <label asp-for="ScopeId" class="FormLabel">مدى الاستعلام :</label>
                <select id="districtSelect" asp-for="ScopeId" class="form-control RequiredInput" style="padding:0px;font-size:12px;"
                        asp-items="@(new SelectList(Model.Scopes,"Id","Name"))">
                    <option></option>
                </select>
                <span asp-validation-for="ScopeId" class="text-danger"></span>
            </div>
            <div class="form-group col-12">
                <input asp-for="OnlyPartnerChildren" type="checkbox" value="0" />
                <label asp-for="OnlyPartnerChildren" class="FormLabel">يتم الاجراء بين النقاط التابعة لنفس الوكيل</label>
                <span asp-validation-for="OnlyPartnerChildren" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-outline-success"
                    style="width:100%;border-radius:10px;">
                <i class="fa fa-save"></i>&nbsp;&nbsp;  حفظ
            </button>
        </form>
    </div>
</div>


